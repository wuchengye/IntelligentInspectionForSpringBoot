<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="pattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n" />
	<appender name="rootFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/webapps/logs/log-root-check.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.base}/webapps/logs/log-root-check.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
	</appender>
	<appender name="bdaFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/webapps/logs/log-bda-check.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.base}/webapps/logs/log-bda-check.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>${pattern}</pattern>
		</encoder>
	</appender>
	
	<root level="error">
		<appender-ref ref="rootFile" />
	</root>
<!-- 	additivity:false表示不再继续向上级传递；true表示继续向上传递，上级继续处理消息。默认值为true -->
<!-- 	比如：定义了logger：com.bda.demo.foo,如果设置 additivity="false"则在com.bda.demo.foo级别输出的所有信息只在本logger中处理（即在定义的appender中输出消息），com.bda这个logger不再处理 -->
<!-- 	如果设置 additivity="true"，不但com.bda.demo.foo这个logger会处理，而且com.bda这个logger也会处理消息，并且以此类推直至root -->
	<logger name="druid.sql.Statement" level="error" additivity="true" />
	<logger name="com.bda" level="info" additivity="true">
		<appender-ref ref="bdaFile" />
	</logger>
</configuration>